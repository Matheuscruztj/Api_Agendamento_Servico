{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentação do serviço de agendamento",
        "description": "",
        "version": "1.0.0."
    },
    "paths": {
        "/users/register": {
            "post": {
                "tags": ["Users"],
                "summary": "Criar um usuário",
                "description": "Criar um usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso"
                    },
                    "400": {
                        "description": "Usuário já existe"
                    }
                }
            }
        },
        "/users/session":{
            "post":{
                "tags":["Users"],
                "summary":"sessão",
                "description":"Criar uma sessão autenticada",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties": {
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }

                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "content": {
                            "application/json": {
                              "schema": {
                                "type": "object",
                                "properties": {
                                  "token": {
                                    "type": "string"
                                    },
                                    "user":{
                                        "type":"object",
                                        "properties":{
                                            "name":{
                                                "type":"string"
                                            },
                                            "email":{
                                                "type":"string"
                                            }
                                        }
                                    }
                                  }
                              }
                            }
                        }
                    },

                    "400":{
                        "description": "Email ou password incorretos!"
                    }
                }
            }      
        },
        "/users/enable_service_provider":{
            "patch":{
                "tags":["Users"],
                "summary":"Tornar um provedor",
                "description":"Torna o usuário um provedor de serviço",
                "security":[
                    {"bearerAuth":[]}
                ],
                "responses":{
                    "200":{
                        "description":"Successo"
                    },
                    "400":{
                        "description":"Usuário já é um prestador de serviço"
                    }
                }
            }
        },
        "/users/appoiment":{
            "put":{
                "tags":["Users"],
                "summary":"Agendamento",
                "description":"Usuário fazer um agendamento de serviço",
                "security":[
                    {"bearerAuth":[]}
                ],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "appointment_id":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users":{
            "put":{
                "tags":["Users"],
                "summary":"Editar usuário",
                "description":"Editar dados do usuário",
                "security":[
                    {"bearerAuth":[]}
                ],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/definitions/User"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Successo"
                    },
                    "400":{
                        "description":"Email já em uso"
                    }
                }
            }
        },
        "/service_providers/session":{
            "post":{
                "tags":["Service Providers"],
                 "summary":"sessão",
                "description":"Criar uma sessão autenticada",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties": {
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }

                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "contact": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "name": "Nome do exemplo",
                "contact": "123123",
                "address": "Endereço de exemplo",
                "email": "exemplo@exemplo.com",
                "password": "password"
            }
        }
    },
    "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}